---
import BaseLayout from "../layouts/BaseLayout.astro";
import ArcCanvas from "../components/ArcCanvas.astro";
import SiteHeader from "../components/SiteHeader.astro";
import ProjectsContent from "../components/ProjectsContent.astro";
import '../styles/projects-page.css';  // ‚Üê ADD THIS LINE


const description = "Explore Arc^'s active research projects in plasma-activated water, ecosystem repair, and open hardware.";
const siteUrl = Astro.site ? new URL("/projects", Astro.site).toString() : undefined;

const seo = {
  canonical: siteUrl,
  openGraph: {
    title: "Arc^ Projects",
    description,
    url: siteUrl,
  },
  twitter: {
    title: "Arc^ Projects",
    description,
  },
};
---
<BaseLayout title="arc^ - Projects" description={description} bodyClass="page-projects" seo={seo}>
  <ArcCanvas />
  <SiteHeader active="projects" />
  <ProjectsContent />
</BaseLayout>