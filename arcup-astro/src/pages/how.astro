---
import BaseLayout from "../layouts/BaseLayout.astro";
import ArcCanvas from "../components/ArcCanvas.astro";
import SiteHeader from "../components/SiteHeader.astro";
import HowContent from "../components/HowContent.astro";
import '../styles/how-page.css';  // ADD THIS

const description = "How arc^ teams listen, prototype, and steward projects with community partners.";
const siteUrl = Astro.site ? new URL("/how", Astro.site).toString() : undefined;

const seo = {
  canonical: siteUrl,
  openGraph: {
    title: "How arc^ works",
    description,
    url: siteUrl,
  },
  twitter: {
    title: "How arc^ works",
    description,
  },
};
---
<BaseLayout title="arc^ - how" description={description} bodyClass="page-how" seo={seo}>
  <ArcCanvas />
  <SiteHeader active="how" />
  <HowContent />
</BaseLayout>

