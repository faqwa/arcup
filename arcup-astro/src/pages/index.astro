---
import BaseLayout from "../layouts/BaseLayout.astro";
import ArcCanvas from "../components/ArcCanvas.astro";
import SiteHeader from "../components/SiteHeader.astro";
import DefinitionContent from "../components/DefinitionContent.astro";

const description = "arc^ is a regenerative research and stewardship collective exploring plasma-activated water and community-powered repair.";
const siteUrl = Astro.site ? new URL("/", Astro.site).toString() : undefined;

const seo = {
  canonical: siteUrl,
  openGraph: {
    title: "arc^ definition",
    description,
    url: siteUrl,
  },
  twitter: {
    title: "arc^ definition",
    description,
  },
};

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "arc^ byali",
  description,
};

if (siteUrl) {
  structuredData.url = siteUrl;
}
---
<BaseLayout title="arc^ definition" description={description} bodyClass="page-definition" seo={seo}>
  <ArcCanvas />
  <SiteHeader active="home" />
  <DefinitionContent />
  <script type="application/ld+json" slot="head">
    {JSON.stringify(structuredData)}
  </script>
</BaseLayout>

