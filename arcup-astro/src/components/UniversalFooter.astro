<style>
  .universal-footer {
    margin-top: clamp(3rem, 7vw, 5rem);
    background: linear-gradient(135deg, rgba(6, 12, 22, 0.8), rgba(6, 12, 22, 0.95));
    border-top: 1px solid rgba(93, 225, 228, 0.2);
    backdrop-filter: blur(20px);
  }

  .footer-container {
    width: var(--shell-width);
    margin: 0 auto;
    padding: clamp(2.5rem, 6vw, 4rem) clamp(1.5rem, 4vw, 2.5rem);
  }

  /* Header Section */
  .footer-header {
    text-align: center;
    margin-bottom: clamp(2.5rem, 6vw, 3.5rem);
    padding-bottom: clamp(1.5rem, 4vw, 2rem);
    border-bottom: 1px solid rgba(93, 225, 228, 0.15);
  }

  .footer-brand {
    margin: 0 0 0.5rem 0;
    font-size: clamp(1.8rem, 4.5vw, 2.4rem);
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: lowercase;
    color: var(--color-text);
  }

  .footer-tagline {
    margin: 0;
    font-size: clamp(1rem, 2.5vw, 1.15rem);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  /* Main Content */
  .footer-content {
    display: grid;
    gap: clamp(2rem, 5vw, 3rem);
    grid-template-columns: repeat(auto-fit, minmax(min(200px, 100%), 1fr));
    margin-bottom: clamp(2rem, 5vw, 3rem);
  }

  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-section-title {
    margin: 0;
    font-size: clamp(1.1rem, 2.8vw, 1.25rem);
    font-weight: 600;
    color: var(--color-primary-bright);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: clamp(0.95rem, 2.3vw, 1.05rem);
    line-height: 1.5;
    transition: all var(--transition-base);
    position: relative;
    padding-left: 0;
  }

  .footer-links a:hover {
    color: var(--color-primary-bright);
    transform: translateX(4px);
  }

  .footer-links a.coming-soon {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .footer-links a.coming-soon:hover {
    transform: none;
    color: var(--color-text-muted);
  }

  /* Social Links */
  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: clamp(0.95rem, 2.3vw, 1.05rem);
    line-height: 1.5;
    transition: all var(--transition-base);
    padding: 0.5rem 0;
  }

  .social-link:hover {
    color: var(--color-primary-bright);
    transform: translateX(4px);
  }

  .social-link svg {
    flex-shrink: 0;
    opacity: 0.8;
  }

  .social-link:hover svg {
    opacity: 1;
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid rgba(93, 225, 228, 0.15);
    padding-top: clamp(1.5rem, 4vw, 2rem);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer-copyright {
    margin: 0;
    font-size: clamp(0.85rem, 2vw, 0.95rem);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .footer-copyright a {
    color: var(--color-primary-bright);
    text-decoration: underline;
    text-decoration-color: rgba(93, 225, 228, 0.3);
    transition: text-decoration-color var(--transition-base);
  }

  .footer-copyright a:hover {
    text-decoration-color: var(--color-primary-bright);
  }

  .footer-actions {
    display: flex;
    gap: 1rem;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .footer-container {
      padding: 2rem 1.5rem;
    }

    .footer-content {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .footer-actions {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .footer-links a:hover,
    .social-link:hover {
      transform: none;
    }
  }
</style>

