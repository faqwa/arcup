<audio data-audio-source preload="none" aria-hidden="true">
  <source src={withBase("/audio/arcup-pronounce.ogg")} type="audio/ogg" />
</audio>
<script is:inline>
  (() => {
    const trigger = document.querySelector('[data-audio-trigger]');
    const audio = document.querySelector('[data-audio-source]');

    if (!trigger || !audio) {
      return;
    }

    const updateState = (isPlaying) => {
      trigger.setAttribute('aria-pressed', String(isPlaying));
      trigger.dataset.state = isPlaying ? 'playing' : 'idle';
    };

    trigger.addEventListener('click', async () => {
      try {
        if (audio.paused) {
          await audio.play();
          updateState(true);
        } else {
          audio.pause();
          audio.currentTime = 0;
          updateState(false);
        }
      } catch (error) {
        console.warn('Unable to play pronunciation audio', error);
      }
    });

    audio.addEventListener('ended', () => {
      updateState(false);
    });
  })();
</script>

