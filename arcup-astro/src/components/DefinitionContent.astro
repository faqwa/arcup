---
const normalizedBase = (import.meta.env.BASE_URL ?? "").replace(/\/$/, "");
const withBase = (path: string) => (path === "/" ? (normalizedBase ? `${normalizedBase}/` : "/") : `${normalizedBase}${path}`);
---

<main id="main-content" class="page-shell definition-page" aria-labelledby="definition-heading">
  <header class="definition-header">
    <p class="definition-subheading">what if we did science that could create a better world?</p>
    <div class="definition-title-row">
      <h1 id="definition-heading">
        arc^
        <span>(noun, verb, movement)</span>
      </h1>
      <div class="pronunciation-inline">
        <span class="pronunciation-text">/'ark-up/</span>
        <button type="button" class="audio-button" data-audio-trigger aria-pressed="false" aria-label="Play pronunciation">
          <span aria-hidden="true" class="icon icon-sound">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" role="presentation">
              <path d="M4 9v6h3l5 4V5L7 9H4Z" fill="currentColor" />
              <path d="M16.5 8.5a4 4 0 0 1 0 7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
              <path d="M19.5 6a7 7 0 0 1 0 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
            </svg>
          </span>
